<!DOCTYPE html>
<html>
<head>
  <title>Service Hours Tracker</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link rel="shortcut icon" href="/assets/distributions-ubuntu.ico" />
  <link href="/assets/style.css" media="screen" rel="stylesheet" />
</head>
<body>
      <script>
        $(function(){
        var url = window.location.pathname;  
        var activePage = url.substring(url.lastIndexOf('/')+1);
        $('.nav li a').each(function(){  
        var currentPage = this.href.substring(this.href.lastIndexOf('/')+1);

        if (activePage == currentPage) {
        $(this).parent().addClass('active'); 
        } 
        });
        })
        $('body').scrollspy({ target: '.navbar-example' })
      </script>
<nav class="navbar navbar-default" role="navigation">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/"><span style="color: #5DFC0A;">Home</span></a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li><a href="/about" ><span style="color: #5DFC0A;">About</span></a></li>
        <li><a href="/top5" ><span style="color: #5DFC0A;">Top 5</span></a></li>
      </ul>

      <ul class="nav navbar-nav navbar-right">
        <li><a href="/dorm_assistants"><span style="color: #5DFC0A;">Dorm Assistants</span></a></li>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>


<%= yield %>

</body>
</html>
